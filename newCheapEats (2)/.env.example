# CheapEats Environment Variables
# Copy this file to .env.local for local development
# Configure these in Netlify environment variables for production

# OpenAI Configuration (Required for AI deal generation)
OPENAI_API_KEY=your_openai_api_key_here

# Google Sheets Configuration (Required for deal storage)
GOOGLE_SHEETS_ID=your_google_sheets_id_here
GOOGLE_SERVICE_ACCOUNT_EMAIL=your_service_account_email@your-project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----"

# Google Places API (Required for location services)
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# Daily Deal Generation (Required for automatic deal updates)
DAILY_GENERATION_KEY=your_daily_generation_key_here

# Next.js Configuration
NEXT_TELEMETRY_DISABLED=1
NODE_ENV=production

# Optional: Rate limiting and security
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Optional: Debug and logging
DEBUG_MODE=false
